{{>adminHeader}}
<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <a href="#" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">Menu</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                    <li class="nav-item">
                        <a href="/admin/home" class="nav-link align-middle px-0 ">Home </a>
                    </li>

                    <li>
                        <a href="/admin/manage_users" class="nav-link px-0 align-middle"> Users </a>
                    </li>

                    <li>
                        <a href="/admin/category" class="nav-link px-0 align-middle btn btn-outline-primary">Category
                        </a>
                    </li>
                    <li>
                        <a href="/admin/orders" class="nav-link px-0 align-middle"
                            style="background-color: #fff; padding: 2px;">Orders</a>
                    </li>
                    <li>
                        <a href="/admin/product" class="nav-link px-0 align-middle"> Products </a>
                    </li>
                    <li>
                        <a href="/admin/coupons"  class="nav-link px-0 align-middle" > Coupons </a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
        <div class="col py-3 d-flex justify-content-center mt-2">

            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4 ">
                    <div class="card-header">Order details</div>
                    <div class="card-body">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Image</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>

                                {{#each orderedProDet}}
                                <tr>
                                    <td scope="row">{{this.name}}</td>
                                    <td>${{this.price}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td><img style="width: 50px; height: auto;" src="/uploads/{{this.image}}"
                                            alt="product image">
                                    </td>
                                    {{!-- <td>
                                        {{!-- <a href="my_orders/details?id={{this._id}}" type="button"
                                            class="btn btn-warning">View
                                            details</a> --}}
                                        {{!-- <a href="/order_details/{{this.id}}" type="button"
                                            class="btn btn-danger">cancel</a>
                                    </td> --}}
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>


                        <div class="d-flex justify-content-between border mt-5 p-5" style="color: #000;">
                            <div class="mt-3 ">
                                <p class="mb-2">Total amount : $<strong>{{myOrderDetails.total}}</strong></p>
                                
                                <p class="mb-2">Payment method: {{myOrderDetails.paymentMethod}}</p>
                                <p class="mb-2">Order status : {{myOrderDetails.status}}</p>
                                {{#if myOrderDetails.discountAmt}}
                                <p class="mb-2">Amount after discount :
                                    $<strong>{{myOrderDetails.amountAfterDscnt}}</strong></p>
                                <p class="mb-2">Discount amount : $<strong>{{myOrderDetails.discountAmt}}</strong></p>
                                <p class="mb-2" style="color: green;">Coupon used: {{myOrderDetails.coupon}}</p>
                                {{else}}
                                <p class="mb-2" style="color: green;">No coupon applied</p>
                                {{/if}}

                            </div>



                            <div class="">
                                <h5 class="border-bottom mb-3">Delivery address</h5>
                                <p>{{address.name}}</p>
                                <p>Mobile: {{address.mobile}}</p>
                                <p>{{address.adressLine1}}</p>
                                <p>{{address.addressLine2}}</p>
                                <p>{{address.city}}, {{address.state}},</p>
                                <p>Pin: {{address.pin}}</p>

                            </div>
                        </div>
                    </div>

                    <div class="d-flex">
                        {{!-- <form action="/change_status" method="post">
                            <div class="d-flex">
                                <div style="width: 100%;" class="p-l-15 ">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Change order status</option>
                                        <option value="1">Shipped</option>
                                        <option value="2">Delivered</option>
                                    </select>
                                </div>
                                <div>
                                    <button type="submit" class="m-l-5 btn btn-primary">submit</button>
                                </div>
                            </div>
                        </form> --}}
                        <div class="m-l-auto p-r-15 p-b-15">
                            <a href="/admin/orders" class=" btn btn-primary">Back to orders</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>