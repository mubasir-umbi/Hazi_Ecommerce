<div class="container-fluid">
  <div class="row flex-nowrap">
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <a href="#" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <span class="fs-5 d-none d-sm-inline">Menu</span>
        </a>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

          <li class="nav-item">
            <a href="/admin/home" class="nav-link align-middle px-0 ">Home </a>
          </li>

          <li>
            <a href="/admin/manage_users" class="nav-link px-0 align-middle"> Users </a>
          </li>

          <li>
            <a href="/admin/category" class="nav-link px-0 align-middle "
              style="background-color: #fff; padding: 2px;">Category </a>
          </li>
          <li>
            <a href="/admin/orders" class="nav-link px-0 align-middle">Orders</a>
          </li>
          <li>
            <a href="/admin/product" class="nav-link px-0 align-middle"> Products </a>
          </li>
          <li>
            <a href="/admin/coupons" class="nav-link px-0 align-middle"> Coupons </a>
          </li>
          <li>
                        <a href="/admin/banners" class="nav-link px-0 align-middle"> Banner </a>
                    </li>
        </ul>
        <hr>
      </div>
    </div>
    <div class="col py-3" style="text-align: center;">
      {{!--
      <div
        style=" width: 200px; height: 50px; border: 2px solid darkcyan; margin-left: auto; margin-right: auto; margin-bottom: 25px;"
        class="rounded">
        <h1>Category</h1>
      </div> --}}

      <div style="margin-left: 1080px;">
        <a href="/admin/add_category" type="button" class="btn btn-primary"
          style="margin-left: auto; margin-bottom: 15px;">Add Category</a>
      </div>

      <table class="table table-hover" style="border-top: 1px solid black;">
        <thead>
          <tr>
           
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each allCtegoryData}}
          <tr>
            
            <td>{{this.category}}</td>
            <td><img style="width 40px; height: 40px; " src="/uploads/{{this.imageUrl}}" alt="Category image"></td>
            <td>
              <a href="/admin/edit_category/{{this.id}}" onclick="return confirm ('Are you sure want to edit?')"
                type="button" class="btn btn-warning">Edit</a>
              <a href="/admin/delete_category/{{this.id}}" onclick="return confirm ('Are you sure want to delete?')"
                type="button" class="btn btn-danger">Delete</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>